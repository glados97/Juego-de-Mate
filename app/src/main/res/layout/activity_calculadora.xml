<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5663DD9E"
    android:orientation="vertical"
    tools:context=".Calculadora">

    <LinearLayout
        android:id="@+id/gravity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:text="0"
                android:textColor="#00A480"
                android:textSize="36sp" />

            <Button
                android:id="@+id/borrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#34D2AF"
                android:clickable="true"
                android:gravity="center"
                android:onClick="Borrar"
                android:text="borrar"
                android:textSize="24sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/siete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#9CEF6C"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Siete"
                    android:text="7"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/ocho"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#9CEF6C"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Ocho"
                    android:text="8"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/nueve"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#9CEF6C"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Nueve"
                    android:text="9"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/division"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#64DE89"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Division"
                    android:text="/"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cuatro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#9CEF6C"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Cuatro"
                    android:text="4"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/cinco"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#9CEF6C"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Cinco"
                    android:text="5"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/seis"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#9CEF6C"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Seis"
                    android:text="6"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/por"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#64DE89"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Por"
                    android:text="X"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/uno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#9CEF6C"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Uno"
                    android:text="1"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/dos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#9CEF6C"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Dos"
                    android:text="2"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/tres"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#9CEF6C"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Tres"
                    android:text="3"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/menos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#64DE89"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Menos"
                    android:text="-"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cero"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#9CEF6C"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Cero"
                    android:text="0"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/punto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#64DE89"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Punto"
                    android:text="."
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/igual"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#34D2AF"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Igual"
                    android:text="="
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/mas"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#64DE89"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="Mas"
                    android:text="+"
                    android:textSize="36sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/regresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#34D2AF"
                android:clickable="true"
                android:enabled="true"
                android:gravity="center"
                android:onClick="Regresar"
                android:text="Regresar"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>